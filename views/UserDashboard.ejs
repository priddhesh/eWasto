     <div class="d-flex flex-row mb-3 " style="justify-content: center;">
            <div class="col-lg-3">
              <div class="card " style="margin:10px; border:none;" >
                <div class="card-body text-center">
                  <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava3.webp" alt="avatar"
                    class="rounded-circle img-fluid" style="width: 150px;">
                  <h5 class="my-3"><%= user.name %></h5>
                  <div class="d-flex justify-content-center mb-2">
                    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal2">
                        Write blog
                    </button>
                  </div>
                </div>
              </div>
            </div>
            
            <div class="col-lg-3 " >
              <div class="card " style="margin:20px; border:none; " >
                <div class="card-body text-center">
                    <img src="/images/icons.png" alt="avatar"
                    class="rounded-circle img-fluid" style="width: 150px;">
                    <h5 class="my-3">Your Points</h5>
                  <h5 class="my-3"><%= user.credits%></h5>
                </div>
              </div>
            </div>


     </div>

     <div  class="d-flex flex-row mb-3 justify-content-center">
        <div class="col-lg-3">
            <div class="card " style="margin:20px; border:none; " >
                <div class="card-body text-center">
                    <img src="/images/recycle.png" alt="avatar"
                    class="rounded-circle img-fluid" style="width: 150px;">
                    <div class="d-flex justify-content-center mb-2">
                        <form action="/map" method="get">
                        <button type="submit" class="btn btn-outline-success ms-1">E-waste Request</button>
                    </form>
                      </div>
                </div>
              </div>
        </div>
        <div class="col-lg-3">
            <div class="card " style="margin:20px; border:none; " >
                <div class="card-body text-center">
                    <img src="/images/redeem.png" alt="avatar"
                    class="rounded-circle img-fluid" style="width: 150px;">
                    <div class="d-flex justify-content-center mb-2">
                        <button type="button" class="btn btn-outline-success ms-1">Redeem Points</button>
                      </div>
                </div>
              </div>
        </div>
        <div class="col-lg-3">

            <div class="card " style="margin:20px; border:none; " >
                <div class="card-body text-center">
                    <img src="/images/money.png" alt="avatar"
                    class="rounded-circle img-fluid" style="width: 150px;">
                    <div class="d-flex justify-content-center mb-2">
                        <button type="button" class="btn btn-outline-success ms-1" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
                            Refer and Earn
                        </button>
                    </div>
                </div>
              </div>
        </div>
     </div>
      
     <div class="d-flex flex-row mb-3 justify-content-center">

        <h4>Your Request</h4>
     </div>
          
     <div class="d-flex flex-row mb-3 justify-content-center">
        <table class="table table-hover">
            <thead>
              <tr class="table-info">
                <th scope="col">Request No</th>
                <th scope="col">Sub Category</th>
                <th scope="col">Address</th>
                <th scope="col">Time</th>
                <th scope="col">Date</th>
                <th scope="col">Status</th>
                <th scope="col">Cancel</th>
                
              </tr>
            </thead>
            <tbody>
            <% let i=0; if(requests.length>0) { requests.forEach(function(item){ i++; %>
              <tr class="table-info">
                <th scope="row"><%= i%></th>
                <td><%= item.company%></td>
                <td><%= item.model%></td>
                <td><%= item.price%></td>
                <td><%= item.date.toString().substring(0,15) %></td>
                <% if (item.status === 1) { %>
                    <td class="bg-warning">Delivered</td>
                <% } else if (item.status === 0) { %>  
                    <td class="bg-warning">Approved</td>
                <% } else if (item.status === -1) { %>  
                    <td class="bg-warning">Pending</td>
                <% } %>                
                <td><button type="button" class="btn btn-outline-danger btn-lg">Cancel</button></td>
              </tr>
              <% }) }else{ %>
                <tr>
                  <td colspan="5">No requests found</td>
                </tr>
                <% } %>
            </tbody>
          </table>
     </div>
    
     <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h1 class="modal-title fs-5" id="staticBackdropLabel">Refer and Earn</h1>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div id="contentToCopy">
                    <%= user.referral %>
                </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
          </div>
        </div>
      </div>

      <div class="modal fade" id="staticBackdrop1" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h1 class="modal-title fs-5" id="staticBackdropLabel">Refer and Earn</h1>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div id="contentToCopy">
                    <%= user.referral %>
                </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
          </div>
        </div>
      </div>
</body>
